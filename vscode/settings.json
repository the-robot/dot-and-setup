{
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,

    "editor.fontFamily": "'Input Mono', 'Fura Code', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,

    // "terminal.integrated.fontFamily": "SpaceMono Nerd Font Mono",
    "terminal.integrated.fontSize": 14,
    
    // Todo Highlights
    "todohighlight.keywords": [
        {
            "text": "REVIEW:",
            "color": "#FFFFFF",
            "backgroundColor": "#34495e"
        },
        {
            "text": "NOTE:",
            "color": "#FFFFFF",
            "backgroundColor": "#27ae60",
        },
        {
            "text": "TODO:",
            "color": "#FFFFFF",
            "backgroundColor": "#e1b12c"
        },
        {
            "text": "HACK:",
            "color": "#FFFFFF",
            "backgroundColor": "#8e44ad",
            "isWholeLine": false,
        },
        {
            "text": "BUG:",
            "color": "#FFFFFF",
            "backgroundColor": "#EA2027"
        },
        {
            "text": "DOCME:",
            "color": "#FFFFFF",
            "backgroundColor": "#0984e3"
        },
        {
            "text": "TESTME:",
            "color": "#FFFFFF",
            "backgroundColor": "#e84393"
        },
        {
            "text": "DEBUG:",
            "color": "#FFFFFF",
            "backgroundColor": "#2c2c54",
            "isWholeLine": true
        },
    ],

    // Tree Explorer
    "files.exclude": {
        "**/.vscode": true,

        // React Native
        "**/.expo": true,
        "**/.expo-shared": true,

        // NPM & Node
        "**/.next": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
        "**/yarn-lock.json": true,

        // Python
        "**/bin": true,
        "**/include": true,
        "**/lib": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.Python": true,
        "**/.pytest_cache": true,
    },

    // Language Formatting
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },

    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[javascriptreact]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[typescript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    
    "[typescriptreact]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[css]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[scss]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[html]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
}
